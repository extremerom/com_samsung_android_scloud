  "styles": {
    "headerText": {
      "type": "TextStyle",
      "fontSize": 13,
      "fontColor": {
        "color": "GRAYSCALE_D1"
      },
      "fontWeight": "SemiBold"
    },
    "totalSizeText": {
      "type": "TextStyle",
      "fontSize": 50,
      "fontColor": {
        "color": "GRAYSCALE_D1"
      },
      "fontWeight": "Bold"
    },
    "quotaText": {
      "type": "TextStyle",
      "fontSize": 14,
      "fontColor": {
        "color": "GRAY_TEXT_L4"
      },
      "fontWeight": "Bold",
      "maxLine": 1,
      "overflow": "Ellipsis"
    },
    "subscriptionDescriptionStyle": {
      "type": "TextStyle",
      "fontSize": 13,
      "fontColor": {
        "color": "GRAY_TEXT_L4"
      },
      "fontWeight": "Regular"
    },
    "subscriptionDescriptionErrorStyle": {
      "type": "TextStyle",
      "fontSize": 13,
      "fontColor": {
        "color": "Custom",
        "hexColor": "#FFD93E36"
      },
      "fontWeight": "Regular"
    },
    "subscriptionActionStyle": {
      "type": "TextStyle",
      "fontSize": 13,
      "fontColor": {
        "color": "GRAY_TEXT_L2"
      },
      "fontWeight": "Bold"
    },
    "buttonStyle": {
      "type": "ButtonStyle",
      "colors": {
        "containerColor": {
          "color": "Custom",
          "hexColor": "#00000000"
        },
        "contentColor": {
          "color": "Common_White"
        }
      },
      "size": "XSmall"
    }
  },
  "layout": {
    "top": {
      "type": "Column",
      "id": "top_view",
      "modifier": {
        "top": 18,
        "bottom": 18,
        "start": 18,
        "end": 18
      },
      "children": [
        {
          "type": "Row",
          "id": "top_view_row",
          "properties": {
            "horizontalArrangement": {
              "arrangementType": "SpaceBetween"
            },
            "verticalAlignment": "Top"
          },
          "modifier": {
            "width": {
              "sizeType": "Fill"
            },
            "height": {
              "sizeType": "Wrap"
            }
          },
          "children": [
            {
              "type": "Text",
              "id": "premium_text",
              "properties": {
                "text": {
                  "stringId": "premium_text_label"
                },
                "style": "headerText"
              },
              "modifier":{
                "width": {
                  "sizeType": "Wrap",
                  "weight": 1,
                  "align": "Start"
                },
                "height": {
                  "sizeType": "Wrap"
                }
              }
            },
            {
              "type": "Button",
              "id": "upgrade_button",
              "properties" : {
                "text": {
                  "stringId": "button_text_label"
                },
                "style": "buttonStyle",
                "action": {
                  "type": "open_deeplink",
                  "payload": {
                    "uri": "samsungcloud://com.samsung.android.scloud/premium/web?landing=onboarding"
                  }
                }
              },
              "modifier" : {
                "start": 8,
                "backgroundLayers": [
                  {
                    "type": "Linear",
                    "colors": [
                      {
                        "color": "Primary_Blue"
                      },
                      {
                        "color":"Custom",
                        "hexColor": "#FF84ADFF"
                      }
                    ],
                    "start": {
                      "x": 0.0,
                      "y": 0.5
                    },
                    "end": {
                      "x": 1.0,
                      "y": 0.5
                    },
                    "shape": {
                      "type": "Circle"
                    }
                  }
                ],
                "width": {
                  "sizeType": "Minimum",
                  "size": 50,
                  "weight": 1,
                  "align": "End"
                }
              }
            }
          ]
        },
        {
          "type": "Row",
          "id": "top_row",
          "properties": {
            "verticalAlignment": "Bottom"
          },
          "modifier": {
            "top": 20,
            "width": {
              "sizeType": "Fill"
            }
          },
          "children": [
            {
              "type": "Text",
              "id": "storage_text",
