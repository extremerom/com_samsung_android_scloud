        {
          "type": "Column",
          "id": "bottom_column",
          "properties": {
            "properties": {
              "horizontalAlignment": "Start"
            }
          },
          "modifier": {
            "top": 8,
            "width": {
              "sizeType": "Fill"
            }
          },
          "children": [
            {
              "type": "Text",
              "id": "subscription_description",
              "properties": {
                "text": {
                  "stringId": "subscription_status",
                  "bindStatus": true,
                  "args": [
                    {
                      "type": "binding",
                      "key": "arg1"
                    },
                    {
                      "type": "binding",
                      "key": "arg2"
