<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="15.0dp" />
            <solid android:color="@color/progress_background_color" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="left" android:clipOrientation="horizontal">
            <shape android:shape="rectangle" android:useLevel="true">
                <corners android:radius="15.0dp" />
                <gradient android:startColor="#6674b0ff" android:endColor="#663e91ff" android:angle="0.0" />
            </shape>
        </clip>
    </item>
</layer-list>
